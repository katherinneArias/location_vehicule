{% extends 'base.html.twig' %}

{% block title %}Vehículos disponibles{% endblock %}

{% block body %}
<h1>Vehículos disponibles</h1>

<div class="vehicule-list">
    {% for vehicule in vehicules %}
        <div class="vehicule-card">
            <h3>{{ vehicule.marque }} {{ vehicule.modele }}</h3>
            <p>Precio por día: {{ vehicule.prixParJour }} €</p>
            {% if vehicule.photo %}
                <img src="{{ asset('uploads/image/' ~ vehicule.photo) }}" width="200">
            {% endif %}
            <a href="{{ path('app_reservation_new', { 'vehicule': vehicule.id }) }}" class="btn">Reservar</a>
        </div>
    {% else %}
        <p>No hay vehículos disponibles.</p>
    {% endfor %}
</div>
{% endblock %}
