{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Location Véhicule{% endblock %}

{% block body %}
<div class="hero">
    <div class="hero-content">
        <h1>Bienvenue sur <span class="highlight">Location Véhicule</span></h1>
        <p>Réservez votre voiture idéale dès aujourd'hui</p>
        {% if is_granted('ROLE_CLIENT') %}
            <a href="{{ path('app_reservation_index') }}" class="btn">Mes Réservations</a>
        {% elseif is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_home') }}" class="btn">Gérer les véhicules</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn">Connexion</a>
        {% endif %}
    </div>
</div>

<div class="container">
    <h2>Nos services</h2>
    <p>Location de voitures de luxe, sport et utilitaires.</p>
</div>
{% endblock %}